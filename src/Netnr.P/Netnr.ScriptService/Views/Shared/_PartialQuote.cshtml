@model string
@{
    var listQuote = Model.Split(',').ToList();
}

@foreach (var item in listQuote)
{
    switch (item)
    {
        case "_own.js":
            {
                var action = ViewContext.RouteData.Values["action"]?.ToString();
                var ownjs = $"/_assets/js/{action.ToLower()}.js";
                if (File.Exists(PathTo.Combine(GlobalTo.WebRootPath, ownjs)))
                {
                    <script src="@ownjs" asp-append-version="true"></script>
                }
            }
            break;
        default:
            {
                var namejs = $"/_assets/js/{item}";
                if (File.Exists(PathTo.Combine(GlobalTo.WebRootPath, namejs)))
                {
                    <script src="@namejs" asp-append-version="true"></script>
                }
            }
            break;
    }
}