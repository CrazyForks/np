<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <a href="/js/pinyin.js" target="_blank">pinyin.js</a>
        </div>
        <div class="col-md-12 my-3">
            <input class="form-control" placeholder="例如：重要重庆" id="txtChinese" />
        </div>
        <div class="col-md-12">
            <select class="form-control" multiple id="sePinyin"></select>
        </div>
    </div>
</div>

<script src="/js/pinyin.js" asp-append-version="true"></script>
<script>
    $('#txtChinese').keyup(function () {
        var select = document.getElementById('sePinyin');
        select.options.length = 0;
        if (this.value != "") {
            var arrPY = PY.QueryArray(this.value);
            for (var i = 0; i < arrPY.length; i++) {
                select.options.add(new Option(arrPY[i], arrPY[i]))
            }
        }
    });
</script>