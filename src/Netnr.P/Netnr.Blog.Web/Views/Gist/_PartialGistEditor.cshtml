@model Gist
@{
    var mo = Model ?? new Gist();
}

<div class="@QuoteTo.PanelClass1">
    <div class="row">
        <div class="col-12 d-none d-sm-inline-block">
            @if (Model != null)
            {
                ViewData["Title"] = "Editing " + mo.GistFilename;
                <p>Editing <a href="/gist/code/@mo.GistCode">@mo.GistFilename</a></p>
            }
            else
            {
                ViewData["Title"] = "Create a new Gist";
                <p class="text-center">Instantly share code, notes, and snippets.</p>
            }
        </div>
        <div class="col-auto mb-2">
            <button class="nrg-btn-save btn btn-warning">Save gist</button>
        </div>
        <div class="col-auto mb-2">
            <div class="input-group">
                <span class="input-group-text">Language</span>
                <select class="nrg-se-language form-select" placeholder="Choose a language" style="min-width:12em" data-value="@mo.GistLanguage"></select>
            </div>
        </div>
        <div class="col-md mb-2">
            <div class="input-group">
                <span class="input-group-text">FileName</span>
                <input class="nrg-txt-filename form-control" title="支持终端录屏 asciinema-player 语言选择 shell 文件名格式为 *.cast" placeholder="name.sh" value="@mo.GistFilename" maxlength="50" />
            </div>
        </div>
        <div class="col-12 mb-2">
            <input class="nrg-txt-remark form-control" placeholder="description" maxlength="200" value="@mo.GistRemark" />
        </div>
        <div class="col-12">
            <div class="nrg-editor rounded"></div>
            <input type="hidden" class="nrg-hid-content" value="@(string.IsNullOrWhiteSpace(mo.GistContent)?"console.log(\"Hello world!\");":mo.GistContent)" />
            <input type="hidden" class="nrg-hid-code" value="@mo.GistCode" />
        </div>
    </div>
</div>