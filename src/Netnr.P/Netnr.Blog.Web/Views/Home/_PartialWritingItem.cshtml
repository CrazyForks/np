@model List<UserWriting>

@if (Model.Count == 0)
{
    <h1 class="text-center my-5 py-5">咣</h1>
}
else
{
    foreach (var mo in Model)
    {
        <div class="col-lg-6 col-xxl-4 my-4">

            @if (mo.UwLaud > 0)
            {
                <span class="me-2" title="点赞">👍@mo.UwLaud</span>
            }

            <a class="text-break fs-5" href="/home/list/@mo.UwId">@mo.UwTitle</a>
            <partial name="~/Views/Home/_PartialTagItem.cshtml" model="mo.Spare1" />

            <div class="mt-1 opacity-75">
                <a class="me-2 small" href='/user/id/@mo.Uid'>@mo.Spare3</a>
                <small class="me-2 d-none d-sm-inline-block" title="创建于">@ParsingTo.FormatTimeAgo(mo.UwCreateTime.Value)</small>
                <small class="me-2" title="阅读量">
                    👁@ParsingTo.FormatCount(mo.UwReadNum.Value)
                </small>
                <small class="me-2" title="回复数">
                    💬@mo.UwReplyNum.Value
                </small>
            </div>
        </div>
    }
}