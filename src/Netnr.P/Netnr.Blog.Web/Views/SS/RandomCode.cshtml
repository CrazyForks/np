<div class="nr-card-box container-fluid p-4">
    <div class="row">
        <div class="col-sm-auto mb-3">
            <sl-button class="nr-btn-build" variant="warning">生成</sl-button>
            <sl-button class="nr-btn-reset">重置</sl-button>
        </div>
        <div class="col-sm-auto mb-3">
            <sl-button variant="text">包含</sl-button>
            <sl-checkbox class="nr-chk-upper mt-2 me-2" value="A" checked>ABC</sl-checkbox>
            <sl-checkbox class="nr-chk-lower mt-2 me-2" value="a" checked>abc</sl-checkbox>
            <sl-checkbox class="nr-chk-number mt-2 me-2" value="0" checked>123</sl-checkbox>
            <sl-checkbox class="nr-chk-symbol mt-2 me-2" value="!" checked>!@@#</sl-checkbox>
        </div>
        <div class="col-sm-auto mb-3">
            <sl-button variant="text">长度</sl-button>
            <sl-input class="nr-txt-length d-inline-block" placeholder="长度" type="number" value="16" min="1" max="99" step="1"></sl-input>
        </div>
        <div class="col-sm-auto mb-3">
            <sl-button variant="text">排除</sl-button>
            <sl-input class="nr-txt-exclude d-inline-block" value="0oOiI1l" placeholder="排除字符，如：0oOiIlL1"></sl-input>
        </div>
        <div class="col-12">
            <sl-textarea class="nr-txt-result" size="large" rows="9" label="生成结果" placeholder="输出"></sl-textarea>
        </div>
    </div>
</div>