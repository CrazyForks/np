{
  //2022-02-28
  "Version": "0.1.1",

  //控制台输出编码，不指定时：Windows 为 Unicode，Linux 为 UTF-8
  "Console_Encoding": "",

  //映射匹配模式（读写 表、列）：Same（相同） Similar（相似）
  "MapingMatchPattern": "Similar",

  //数据库连接信息
  "ListConnectionInfo": [
    {
      "ConnectionType": "SQLite",
      "ConnectionString": "Data Source=D:\\tmp\\tmp.db",
      "ConnectionRemark": "Local tmp"
    },
    {
      "ConnectionType": "MySQL",
      "ConnectionString": "Server=local.host;uid=root;pwd=Abc123....",
      "ConnectionRemark": "local MySQL"
    },
    {
      "ConnectionType": "SQLServer",
      "ConnectionString": "Server=local.host;uid=sa;pwd=Abc123....",
      "ConnectionRemark": "local SQLServer"
    },
    {
      "ConnectionType": "PostgreSQL",
      "ConnectionString": "Server=local.host;Port=5432;User Id=postgres;Password=Abc123....",
      "ConnectionRemark": "local PostgreSQL"
    },
    {
      "ConnectionType": "Oracle",
      "ConnectionString": "Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=local.host)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=EE.Oracle.Docker)));User Id=CQSME;Password=Abc123....",
      "ConnectionRemark": "local Oracle CQSME"
    },
    {
      "ConnectionType": "Oracle",
      "ConnectionString": "Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=local.host)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=EE.Oracle.Docker)));User Id=CQENT;Password=Abc123....",
      "ConnectionRemark": "local Oracle CQENT"
    }
  ],

  //参数模式（静默执行）ndx Task_Demo
  "Silence": {

    //任务名（Task_ 开头，示例配置，建议新建任务名）
    "Task_Demo": {

      //迁移数据表
      "MigrateDataTable": {
        // 读取连接（引用配置 ConnectionRemark）
        "RefReadConnectionInfo": "local SQLServer",
        // 读取数据库名，可选（默认连接配置的数据库名）
        "ReadDatabaseName": "netnr",
        // 写入连接
        "RefWriteConnectionInfo": "local PostgreSQL",
        // 写入数据库名，可选（默认连接配置的数据库名）
        "WriteDatabaseName": "netnr",
        //读写项配置
        "ListReadWrite": [
          {
            //读取表数据SQL（可带模式名 SchemaName，如 dbo.UserInfo）
            "ReadDataSQL": "select * from UserInfo",
            //写入表名（可带模式名 SchemaName，如 dbo.UserInfo）
            "WriteTableName": "UserInfo",
            //清空写入表SQL（可带模式名 SchemaName），可选
            "WriteDeleteSQL": "TRUNCATE TABLE \"UserInfo\"",
            //读写列名映射，默认自动映射，可选
            "ReadWriteColumnMap": {
              "redadField1": "writeField1",
              "redadField2": "writeField2"
            }
          },
          {
            "ReadDataSQL": "select * from UserWritingTags",
            "WriteTableName": "UserWritingTags",
            "WriteDeleteSQL": "DELETE FROM \"UserWritingTags\" WHERE 1=1"
          }
        ]
      },

      //迁移数据库
      "MigrateDatabase": {
        // 读取连接（引用配置 ConnectionRemark）
        "RefReadConnectionInfo": "local SQLServer",
        // 读取数据库名，可选（默认连接配置的数据库名）
        "ReadDatabaseName": "netnr",
        // 写入连接
        "RefWriteConnectionInfo": "local PostgreSQL",
        // 写入数据库名，可选（默认连接配置的数据库名）
        "WriteDatabaseName": "netnr",
        // 写入前删除表数据
        "WriteDeleteData": true
      },

      //导出数据表
      "ExportDataTable": {
        // 读取连接（引用配置 ConnectionRemark）
        "RefReadConnectionInfo": "local SQLServer",
        // 读取数据库名，可选（默认连接配置的数据库名）
        "ReadDatabaseName": "netnr",
        //导出包完整路径
        "ZipPath": "~/Task_ExportDataTable_{yyyyMMdd_HHmmss}.zip",
        //读取表数据SQL（可带模式名 SchemaName，如 dbo.UserInfo）
        "ListReadDataSQL": [
          "select * from UserInfo",
          "select top 10 * from UserWritingTags"
        ]
      },

      //导出数据库
      "ExportDatabase": {
        // 读取连接（引用配置 ConnectionRemark）
        "RefReadConnectionInfo": "local SQLServer",
        // 读取数据库名，可选（默认连接配置的数据库名）
        "ReadDatabaseName": "netnr",
        //导出包完整路径
        "ZipPath": "~/Task_ExportDatabase_{yyyy}{MMdd}.zip",
        //读取表名（可带模式名 SchemaName），可选，默认全表
        "ListReadTableName": []
      },

      //导入数据库
      "ImportDatabase": {
        // 写入连接
        "RefWriteConnectionInfo": "local PostgreSQL",
        // 写入数据库名，可选（默认连接配置的数据库名）
        "WriteDatabaseName": "netnr",
        // 写入前删除表数据
        "WriteDeleteData": true,
        //导入包完整路径
        "ZipPath": "~/Task_ExportDatabase_{yyyy}{MMdd}.zip",
        //读取表 映射 写入表（可带模式名 SchemaName），可选
        "ReadWriteTableMap": {
          "redadTable1": "writeTable1",
          "dbo.redadTable2": "dbo.writeTable2"
        }
      }
    },

    //构建新的任务
    "Task_New": {

    }
  }
}